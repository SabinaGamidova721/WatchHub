<footer id="site-footer" class="footer footer-default py-5 site-footer <%= footer_class %>">
    <div class="container-fluid">
      <div class="footer-top">
        <div class="row">
          <div class="col-xl-3 col-lg-6 mb-5 mb-lg-0">
            <div class="footer-logo">
                <!--Logo -->
                <div class="logo-default">
                     <a class="navbar-brand text-primary" href="/home" style="font-size: 24px; margin-left: 50px;">
                         WatchHub
                     </a>
                 </div>
            </div>
            
          </div>
          <div class="col-xl-2 col-lg-6 mb-5 mb-lg-0">
            <h4 class="footer-link-title"><%= t("heading.Quick_Links") %></h4>
            <% if current_page?(root_path) %>
              <ul class="nav flex-column">
                <li>
                  <a href="#" class="nav-link"><%= t("nav.About_us") %></a>
                </li>
                <li>
                  <a href="#" class="nav-link"><%= t("nav.Blog") %></a>
                </li>
                <li>
                  <a href="#" class="nav-link">FAQ</a>
                </li>
              </ul>
            <% else %>
              <ul class="nav flex-column">
                <li>
                  <%= link_to t("nav.home"), home_path, class: "nav-link"%>
                </li>
                <li>
                  <%= link_to t("heading.Genres"), genres_path, class: "nav-link"%>
                </li>
                <li>
                  <%= link_to t("nav.search_films"), films_path, class: "nav-link"%>
                </li>
              </ul>
            <% end %>
          </div>
          <div class="col-xl-2 col-lg-6 mb-5 mb-lg-0">
            <% if current_page?(root_path) %>
              <h4 class="footer-link-title"><%= t("heading.Interested_project") %></h4>
              <ul class="nav flex-column">
                <li>
                  <a href="#" class="nav-link"><%= t("nav.Support_us") %></a>
                </li>
                <li>
                  <a href="#" class="nav-link"><%= t("nav.Become_teammate") %></a>
                </li>
                <li>
                  <a href="#" class="nav-link"><%= t("nav.Our_plans") %></a>
                </li>
              </ul>
            <% else %>
              <h4 class="footer-link-title"><%= t("heading.Movies_watch") %></h4>
              <ul class="nav flex-column">
                <li>
                  <%= link_to t("genres.Action"), genre_path(Genre.find_by(title: "Action").id), class: "nav-link"%>
                </li>
                <li>
                  <%= link_to t("genres.Comedy"), genre_path(Genre.find_by(title: "Comedy").id), class: "nav-link"%>
                </li>
                <li>
                  <%= link_to t("genres.Adventure"), genre_path(Genre.find_by(title: "Adventure").id), class: "nav-link"%>
                </li>
              </ul>
            <% end %>
          </div>
          <div class="col-xl-2 col-lg-6 mb-5 mb-lg-0">
            <h4 class="footer-link-title"><%= t("heading.About_company") %></h4>
            <ul class="nav flex-column">
              <li>
                <a href="#" class="nav-link"><%= t("nav.Contact_us") %></a>
              </li>
              <li>
                <a href="#" class="nav-link"><%= t("nav.Privacy_policy") %></a>
              </li>
              <li>
                <a href="#" class="nav-link"><%= t("nav.Terms_use") %></a>
              </li>
            </ul>
          </div>
          <div class="col-xl-3 col-lg-6">
            <h4 class="footer-link-title"><%= t("heading.Subscribe_Newsletter") %></h4>
            <div class="mailchimp mailchimp-dark">
              <div class="input-group mb-3 mt-4">
                <input type="text" class="form-control mb-0 font-size-14" placeholder="<%= t('activerecord.attributes.user.email') %> *" aria-describedby="button-addon2">
                <div class="iq-button">
                  <button type="submit" class="btn btn-sm" id="button-addon2"><%= t("buttons.Subscribe") %></button>
                </div>
              </div>
            </div>
            <div class="d-flex align-items-center mt-5">
              <span class="font-size-14 me-2"><%= t("heading.Follow_Us") %></span>
                <ul class="p-0 m-0 list-unstyled widget_social_media">
                  <li class="">
                    <a href="https://www.facebook.com/" class="position-relative">
                      <i class="bi bi-facebook"></i>
                    </a>
                  </li>
                  <li class="">
                    <a href="https://twitter.com/" class="position-relative">
                      <i class="bi bi-twitter"></i>
                    </a>
                  </li>
                  <li class="">
                    <a href="https://github.com/SabinaGamidova721/WatchHub" class="position-relative">
                      <i class="bi bi-github"></i>
                    </a>
                  </li>
                  <li class="">
                    <a href="https://www.instagram.com/" class="position-relative">
                      <i class="bi bi-instagram"></i>
                    </a>
                  </li>
                </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
</footer>